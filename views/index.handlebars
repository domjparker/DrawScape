<body class="bodyIndex">

<header>
    <nav>
        <div class="nav-wrapper blue lighten-2">
            <a href="#home" class="brand-logo center white-text header-title">DrawScape</a>
            <ul class="left hide-on-med-and-down">
                <li><a href="#home"><i class="material-icons">home</i></a></li>
            </ul>
        </div>
    </nav>
</header>

<main>
    <br>
    {{!-- login section --}}
    <div class="container">
        <form id="log-in-container">
            <h4>Log In</h4>
            <div class="row">
                <div class="input-field col s6 center">
                    <input id="emailLogInput" type="text" class="validate">
                    <label for="first_name">Email</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6 center">
                    <input id="passLogInput" type="text" class="validate">
                    <label for="first_name">Password</label>
                </div>
            </div>
            <button class="button" id="user-send-button">Go</button>
        </form>

        <br>
        <br>
        <br>
        {{!-- materialize sign up  --}}
        <div class="row">

            <br>
            <br>
            <form id="sign-up-container" class="col s12">

                <h4>Sign Up!</h4>
                <div class="row">
                    <div class="input-field col s6 center">
                        <input id="userInput" type="text" class="validate">
                        <label for="first_name">First Name</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s6 center">
                        <input id="emailInput" type="email" class="validate">
                        <label for="email">Enter Email</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s6 center">
                        <input id="passInput" type="password" class="validate">
                        <label for="password">Create Password</label>
                    </div>
                </div>
                <button class="button" id="user-send-button">Go <i class="fa fa-pencil"
                        style="font-size:14px"></i></button>
        </div>

        </form>
    </div>
</main>

</body>

